<Application x:Class="AutoCode.Presentation.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AutoCode.Presentation"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary >
            <Style x:Key="LabelRegular" TargetType="Label">
                <Setter  Property="Foreground" Value="#0C2D48"></Setter>
                <Setter Property="FontFamily" Value="Bahnschrift"></Setter>
                <Setter Property="FontSize" Value="13"></Setter>
                <Setter Property="Padding" Value="7"></Setter>
                <Setter Property="Margin" Value="0,5"></Setter>
            </Style>
            <Style x:Key="TextBoxRegular" TargetType="TextBox">
                <Setter  Property="Background" Value="#0C2D48"></Setter>
                <Setter  Property="Foreground" Value="#B1D4E0"></Setter>
                <Setter Property="FontFamily" Value="Bahnschrift"></Setter>
                <Setter Property="FontSize" Value="13"></Setter>
                <Setter Property="Padding" Value="7"></Setter>
                <Setter Property="Margin" Value="0,5"></Setter>
            </Style>
            <Style x:Key="TextBlockRegular" TargetType="TextBlock">
                <Setter  Property="Background" Value="#0C2D48"></Setter>
                <Setter  Property="Foreground" Value="#B1D4E0"></Setter>
                <Setter Property="FontFamily" Value="Bahnschrift"></Setter>
                <Setter Property="FontSize" Value="13"></Setter>
                <Setter Property="Padding" Value="7"></Setter>
                <Setter Property="Margin" Value="0,5"></Setter>
                <Setter Property="TextWrapping" Value="WrapWithOverflow"></Setter>
            </Style>
            <Style x:Key="CheckBoxRegular" TargetType="CheckBox">
                <Setter  Property="Foreground" Value="#0C2D48"></Setter>
                <Setter Property="FontFamily" Value="Bahnschrift"></Setter>
                <Setter Property="FontSize" Value="13"></Setter>
                <Setter Property="Padding" Value="7"></Setter>
                <Setter Property="Margin" Value="5,0"></Setter>
                <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
            </Style>
            <Style x:Key="PasswordBoxRegular" TargetType="PasswordBox">
                <Setter  Property="Background" Value="#0C2D48"></Setter>
                <Setter  Property="Foreground" Value="#B1D4E0"></Setter>
                <Setter Property="FontFamily" Value="Bahnschrift"></Setter>
                <Setter Property="FontSize" Value="13"></Setter>
                <Setter Property="Padding" Value="7"></Setter>
                <Setter Property="Margin" Value="0,5"></Setter>
            </Style>
            <Style x:Key="ComboBoxRegular" TargetType="ComboBox">
                
                <Setter  Property="Background" Value="#0C2D48"></Setter>
                <Setter  Property="Foreground" Value="#0C2D48"></Setter>
                <Setter Property="FontFamily" Value="Bahnschrift"></Setter>
                <Setter Property="FontSize" Value="13"></Setter>
                <Setter Property="Padding" Value="7"></Setter>
                <Setter Property="Margin" Value="0,5"></Setter>
            </Style>
            <Style x:Key="ComboBoxItemRegular" TargetType="ComboBoxItem">
                <Setter  Property="Background" Value="#0C2D48"></Setter>
                <Setter  Property="Foreground" Value="#0C2D48"></Setter>
                <Setter Property="FontFamily" Value="Bahnschrift"></Setter>
                <Setter Property="FontSize" Value="13"></Setter>
            </Style>
            <Style x:Key="ButtonRegular" TargetType="Button">
                <Setter Property="Background" Value="#0C2D48"></Setter>
                <Setter Property="HorizontalAlignment" Value="Left"></Setter>
                <Setter Property="Height" Value="25"></Setter>
                <Setter Property="Width" Value="100"></Setter>
                <Setter Property="Foreground" Value="#B1D4E0"></Setter>
                <Setter Property="FontWeight" Value="SemiBold"></Setter>
            </Style>
            <LinearGradientBrush x:Key="IndicatorForeground" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Offset="0" Color="#B1D4E0" />
                <GradientStop Offset="0.33" Color="#2E8BC0" />
                <GradientStop Offset="0.66" Color="#145DA0" />
                <GradientStop Offset="1" Color="#0C2D48" />
            </LinearGradientBrush>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/BusyIndicator;component/Theme/Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
